% Color definitions
\definecolor{uo_black}{HTML}{000000}
\definecolor{uo_green}{HTML}{007030}
\definecolor{uo_yellow}{HTML}{FEE11A}
\definecolor{uo_legacygreen}{HTML}{104735}
\definecolor{uo_darkblue}{HTML}{004F6E}
\definecolor{uo_grassgreen}{HTML}{489D46}
