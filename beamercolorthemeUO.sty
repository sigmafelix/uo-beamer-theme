% Main palette
\setbeamercolor*{palette primary}{bg=uo_green, fg=white}
\setbeamercolor*{palette secondary}{bg=uo_black, fg=white}

% block environment
\setbeamercolor{block title}{bg=uo_legacygreen, fg=white}
\setbeamercolor{block body}{bg=uo_limegreen, fg=black}

% alertblock environment
\setbeamercolor{block title alerted}{bg=uo_berry, fg=white}
\setbeamercolor{block body alerted}{bg=uo_lightberry, fg=black}

% example environment
\setbeamercolor{block title example}{bg=uo_darkblue, fg=white}
\setbeamercolor{block body example}{bg=uo_lightblue, fg=black}

% TOC sections
\setbeamercolor{section in toc}{fg=uo_legacygreen}

% itemize, enumerate, etc
\setbeamercolor{structure}{fg=uo_legacygreen}

% bibliography text
